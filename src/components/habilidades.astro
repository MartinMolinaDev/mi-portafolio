---
import GitHubIcon from "../icons/github.astro";
import CypressIcon from "../icons/cypress.astro";
import JavaScriptIcon from "../icons/javascript.astro";
import GitIcon from "../icons/git.astro";
import SqlIcon from "../icons/sql.astro";
import PostmanIcon from "../icons/postman.astro";
import HtmlIcon from "../icons/html.astro";
import CssIcon from "../icons/css.astro";
---

<section class="py-4 px-4 w-full md:w-[766px]">
    <h1 class="mb-4 font-bold font-sans text-md md:text-xl text-lime-400">
        &#60;Habilidades /&#62;
    </h1>
    <div class="flex-row space-x-1 space-y-1">
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <CypressIcon w="24px" h="24px" />Cypress
            </div>
        </div>
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <GitIcon w="23px" h="23px" />Git
            </div>
        </div>
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <GitHubIcon w="23px" h="23px" />GitHub
            </div>
        </div>
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <JavaScriptIcon w="23px" h="23px" />JavaScript
            </div>
        </div>
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <SqlIcon w="23px" h="23px" />SQL
            </div>
        </div>
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <PostmanIcon w="21px" h="21px" />Postman
            </div>
        </div>
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <HtmlIcon w="21px" h="21px" />HTML
            </div>
        </div>
        <div
            class="border border-white center relative inline-block select-none whitespace-nowrap rounded-lg py-1 px-3.5 align-baseline font-sans text-xs md:text-sm leading-none text-white"
        >
            <div class="mt-px flex items-center gap-2">
                <CssIcon w="21px" h="21px" />Css
        </div>
    </div>
</section>
